<% flash.each do |name, msg| -%>
      <%= content_tag :div, msg, class: name %>
<% end -%>
<div class="container">
        <div class="row">
            <div class="page-content">
                <div class="last-rides">

                    <div class="col-md-12 col-sm-12 col-xs-12">

                        <div class="page-sub-title textcenter">
                            <h2>Tus Tarjetas</h2>
                            <div class="line"></div>
                        </div><!-- end .page-sub-title -->

                    </div>

                    <div class="col-md-12 col-sm-12 col-xs-12">

                    <% if @cards != nil then
                     @cards.each do |card| %>

                        <% if card.errors.any? %>
                          <div id="error_explanation">
                            <h2><%= pluralize(card.errors.count, "error") %> evitaron que esta tarjeta fuera eliminada:</h2>
                            <ul>
                              <% card.errors.full_messages.each do |message| %>
                                <li><%= message %></li>
                              <% end %>
                            <ul>
                          </div>
                        <% end %>

                        <article class="ride-box clearfix">

                            <div class="ride-content">
                                <h3>Numero <%= card.numero %>. Codigo de seguridad <%= card.numeroSeguridad %></h3>
                            </div>

                            <ul class="ride-meta">

                                <li class="ride-date">
                                      Fecha de vencimiento
                                        <%= card.vencimiento %>
                                </li><!-- end .ride-date -->

                                <li>
                                    <a href="#">
                                        Ver Tarjeta
                                    </a>
                                </li>
                                <%= link_to 'Eliminar tarjeta', card, method: :delete, data: { confirm: "Estas seguro?" } %>
                            </ul><!-- end .ride-meta -->

                        </article><!-- end .ride-box -->

                    <% end %>
                <% end %>

                    <div class="read-all pagination-margin">
                        <%= link_to "Agregar tarjeta", cards_new_path %>
                    </div><br>

                        <div class="clearfix"></div>

                </div><!-- end .col-md-12 col-sm-12 col-xs-12 -->

            </div><!-- end .last-rides -->

        </div><!-- end .row -->
<%= link_to 'Back', current_user %>
    </div><!-- end .container -->
