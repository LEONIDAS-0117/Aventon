
<div class="container">
        <div class="row">
            <div class="page-content">
                <div class="last-rides">

                    <div class="col-md-12 col-sm-12 col-xs-12">

                        <div class="page-sub-title textcenter">
                            <h2>Mis autos</h2>
                            <div class="line"></div>
                        </div><!-- end .page-sub-title -->

                    </div>

                    <div class="col-md-12 col-sm-12 col-xs-12">
                      <p id="notice"><strong><%= notice %></strong></p>
                      <% current_user.cars.each do |car| %>

                          <article class="ride-box clearfix">

                              <div class="ride-content">
                                  <h3><%= link_to car.brand, car_path(car.id)%> <%=  car.model %>    <%= car.plate %></h3>

                                  <% if (current_user.id == @user.id) %>

                                      <%= link_to 'Eliminar Auto', car, method: :delete, data: { confirm: 'si vas a eliminar el auto de tu cuenta, no debes tener viajes publicados con el mismo' } %>

                                  <% end %>
                              </div>

                          </article><!-- end .ride-box -->

                      <% end %>


                        <div class="clearfix"></div>

                       <!-- <div class="read-all pagination-margin">
                            <a href="">Leer mas mas</a>
                        </div> -->

                </div><!-- end .col-md-12 col-sm-12 col-xs-12 -->

            </div><!-- end .last-rides -->

        </div><!-- end .row -->

    </div><!-- end .container -->
