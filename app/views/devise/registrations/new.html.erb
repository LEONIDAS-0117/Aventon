<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%= stylesheet_link_tag    'form' %>
<%= javascript_include_tag 'form' %>
<%= devise_error_messages! %>
<% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>"><%= value %></div>
<% end %>
<div class="form">

    <div id="signup">

      <h1>Registrate gratis! <img src="<%= asset_path 'Logo.jpg' %>" width="100" height="100"></h1>

      <form action="/" method="post">

        <div class="top-row">
          <div class="field-wrap">
            <%= f.label :first_name, 'Nombre' %><br />
            <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
          </div>

          <div class="field-wrap">
            <%= f.label :last_name, 'Apellido' %><br />
            <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
          </div>
        </div>

        <div class="field-wrap">
          <%= f.label :email, 'Tu Email' %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field-wrap">
          <%= f.label :password, 'Contraseña' %><br />
          <%= f.password_field :password, autocomplete: "off" %>
        </div>

        <div class="field-wrap">
          <%= f.label :password_confirmation, 'Confirmar contraseña' %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off" %>
        </div>

        <div class="field-wrap">
          <%= f.label :birth_date, 'Fecha de nacimiento' %><br />
          <%=  f.date_field :birth_date, autofocus: true, autocomplete: "birth_date" %>
        </div>

        <div class="field-wrap">
          <%= f.label :credit_card_number, 'Numero de tarjeta de credito' %><br />
          <%=  f.number_field :credit_card_number, autofocus: true, autocomplete: "credit_card_number" %>
          <em>(Opcional, podes agregarla luego!)</em><br />
        </div>


        <button type="submit" class="button button-block"/>
        <%= f.submit "Registrarse" %>
      </button>

      <% end %>

    </form>

  </div>

</div> <!-- /form -->
