<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
<%= stylesheet_link_tag    'form' %>
<%= javascript_include_tag 'form' %>
<%= devise_error_messages! %>
<div class="form">

  <h1>Cambiar contraseña <img src="<%= asset_path 'Logo.jpg' %>" width="100" height="100"></h1>

  <!-- <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div> -->

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
  <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field-wrap">
    <%= f.label :password, "Contraseña nueva" %> <br />
    <%= f.password_field :password, autocomplete: "off" %>
    <% if @minimum_password_length %>
    <br />
    <em><%= @minimum_password_length %> caracteres minimo</em>
    <% end %>
  </div>

  <div class="field-wrap">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="field-wrap">
    <%= f.label :current_password %> <br />
    <%= f.password_field :current_password, autocomplete: "off" %>
    <em>(Necesitamos tu contraseña actual para confirmar tus cambios)</em><br />
  </div>

  <button type="submit" class="button button-block"/>
  <%= f.submit "Update" %>
  </button>
<% end %> 
<%= link_to "Back", :back %>

</div>

