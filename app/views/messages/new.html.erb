<%= form_for @message, url: create_message_url do |f| %>
  <%= notice %>
  <%= @message.errors.full_messages.join(', ') %>

  <%= f.text_field :nombre, placeholder: 'Nombre y apellido' %>
  <%= f.email_field :email, placeholder: 'Email' %>
  <%= f.text_field :mensaje, placeholder: 'Mensaje' %>
  <%= f.submit 'Enviar' %>
  <%= link_to 'Cancelar', current_user %>
<% end %>
